{% extends "layout.html.j2" %}

{% set title = 'Dashboard' %}

{% block content %}
    <nav class="nav justify-content-end">
        <button class="btn rounded-4 filess-button" onclick="location.href='{{ url_for('logout') }}';" style="margin: 20px; font-size: 12px; padding: 9px 14px; text-transform: none;">Sign out</button>
    </nav>
    <div class="container" style="margin-top: 50px;">
        <div class="row">
            <div class="col" style="padding-right: 0px;">
                <input name="search" class="form-control filess-textbox mb-3 no-border" placeholder="Find a file">
            </div>
            <div class="col-auto">
                <button type="button" style="padding: 1px;  border-color: transparent;" class="btn rounded-3" onclick="document.getElementById('fileid').click(); document.getElementById('fileid').onchange = function() {document.getElementById('submitid').click(); };">
                    <img src="static/images/light-plus.png" class="btn-primary" style="width: 100%; background-color: transparent; border-color: transparent;" alt="Upload"/>
                </button>
            </div>
        </div>
        <form method="POST" enctype="multipart/form-data">
            <input id='fileid' type='file' name="file" hidden/>
            <input id="submitid" type="submit" hidden/>
        </form>
        <br/>
        <div class="row">
            <div class="col">
                <table class="table table-bordered" style="border-color: transparent; height: 60px; background-color: #1a1a21; border-radius: 5px; font-size: 16px; color: #99999f;">
                    <thead>
                        <tr>
                        <th scope="col" style="padding-left: 20px; font-weight: 400; vertical-align: middle;">Name</th>
                        <th scope="col" style="font-weight: 400; vertical-align: middle;">Date Modified</th>
                        <th scope="col" style="font-weight: 400; vertical-align: middle;">Size</th>
                        </tr>
                    </thead>
                    <tbody style="border-color: transparent; background-color: #3f3f4a;">
                        <tr>
                            <td>Puke.png</td>
                            <td>2/8/2022 11:00 AM</td>
                            <td>156 KB</td>
                        </tr>
                        <tr>
                            <td>Puke.png</td>
                            <td>2/8/2022 11:00 AM</td>
                            <td>156 KB</td>
                        </tr>
                        {% for asset in assets %}
                            <tr>
                                <td>{{ asset }}</td>
                                <td>2/8/2022 11:00 AM</td>
                                <td>156 KB</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}