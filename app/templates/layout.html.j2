    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Overpass:ital,wght@0,100;0,200;0,300;0,400;1,100;1,200;1,300;1,400&display=swap" rel="stylesheet">
    <!-- <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet"> -->

    <!-- Styles -->
    <link rel= "stylesheet" type= "text/css" href="{{ url_for('static',filename='styles/layout.css') }}">

    <!-- Font Awesome Lib -->
    <script src="https://kit.fontawesome.com/0ba2e9ac39.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Our JS -->
    <script src="{{ url_for('static',filename='js/jquery-3.6.0.min.js') }}"></script>
    <script src="{{ url_for('static',filename='js/main.js') }}"></script>

    <!-- Stripe Payment -->
    <script src="https://js.stripe.com/v3/"></script>

    <!-- Landing Page Links -->
    {% block head %}
    {% endblock %}

    {% if title %}
    <title>{{ title }} - Filess</title>
    {% else %}
    <title>Filess</title>
    {% endif %}
  </head>
  <body class="filess-backgroud">
    {% with messages = get_flashed_messages(with_categories=true) %}
      {% if messages %}
        {% for category, message in messages %}
          <div class="alert alert-{{ category if category != 'message' else 'info' }} alert-dismissible d-flex align-items-center fade show" role="alert">
            {{ message }}
          </div>
        {% endfor %}
      {% endif %}
    {% endwith %}
    <!-- Insert content HTML here -->
    {% block content %}
    {% endblock %}
    <div id="spinner" class="filess-dim-screen" style="display: none; position: absolute; z-index: 1056;">
      <div class="text-center filess-center">
        <div class="spinner-border text-light" style="color: #99999f !important;" role="status">
          <span class="sr-only">Loading...</span>
        </div>
      </div>
    </div>
    <!-- Bootstrap JS Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </body>
